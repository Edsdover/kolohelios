h3 New Post
.row
  .col-xs-4
    form(name='newPost', novalidation)
    .form-group
      label(for='title') Title
      input.form-control(type='text', name='title', ng-model='post.title')
    .form-group
      label(for='blurb') Blurb
      input.form-control(type='text', name='blurb', ng-model='post.blurb')
    .form-group
      label(for='imagethumbnail') Thumbnail
      input.form-control(type='text', name='imagethumbnail', ng-model='post.thumbnailimage')
  .col-xs-4
    .form-group
      p(ng-show='post.tags.length > 0') Tags
      ul
        li(ng-repeat='tag in post.tags') {{tag}}
      label(for='addtag') Add Tag
      input.form-control(type='text', name='addtag', ng-model='newTag')
      button.form-control.btn.btn-primary(ng-click='addTag(newTag)') Add Tag
  .col-xs-4
    .form-group
      label(for='postdate') Post Date
      input.form-control(type='date' name='postdate', ng-model='post.postDate')
    .form-group
      label(for='isdraft') Is Draft?
      input.form-control(type='checkbox', name='isdraft', ng-model='post.isDraft')
    .form-group
      p(ng-show='post.images.length > 0') Images
      ul
        li(ng-repeat='image in post.images') {{image}}
      label(for='addimage') Add Image
      input.form-control(type='text', name='addimage', ng-model='newImage')
      button.form-control.btn.btn-primary(ng-click='addImage(newImage)') Add Image
.row
  .col-xs-12
    .form-group
      label(for='bodytext') Body
      textarea.form-control(rows='10', name='bodytext', ng-model='post.bodyText')
      button.btn.btn-info(ng-click='addPost(post)') Save Post
.jumbotron
  div(markdown='post.bodyText')
