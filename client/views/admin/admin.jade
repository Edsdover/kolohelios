h3 Admin
.row
  .col-xs-4(ng-hide='activeUser')
    form(name='newPost')
      .form-group
        label(for='email') Email
        input.form-control(type='email', name='email', ng-model='user.email')
      .form-group
        label(for='password') Password
        input.form-control(type='password', name='password', ng-model='user.password')
      .form-group
        button.form-control.btn.btn-primary(ng-click='loginUser(user)') Login
